{
  "compilerOptions": {
    "lib": ["ESNext"],
    "outDir": "./dist",
    "target": "ES2021",
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": ["./src/**/*"]
}
